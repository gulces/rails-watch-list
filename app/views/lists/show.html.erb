<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, crop: :fill %>')">
  <div class="container">
    <h1><strong><%= @list.name %></strong></h1>
    <%= link_to "Create A Bookmark", new_list_bookmark_path(@list), class: "btn btn-ghost" %>
    <%# <a class="btn btn-flat" href="#">Apply now</a> %>
  </div>
</div>

<div class="container">
  <h2><%= @list.name %></h2>
  <br>
  <% @list.movies.each do |movie| %>
    <%= image_tag movie.poster_url, alt: "Le Wagon", width: 200 %>
    <p><%= movie.title %></p>
    <p><%= movie.overview %></p>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Do you really want to?' } %>
  <% end %>
</div>
