<div class="container">
  <h1>Your New List</h1>
  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <div class="btn btn-ghost"><%= f.button :submit %></div>
  <% end %>
</div>
